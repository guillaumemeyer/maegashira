{
  "include": [
    "examples/**/*.js",
    "src/**/*.js",
    "tests/**.js",
    "commitlint.config.js",
    "eslint.config.js",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "types": [
      "node",
      "bun"
    ],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true
  }
}
